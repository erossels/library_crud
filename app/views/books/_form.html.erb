<%= form_with(model: book, local: true) do |form| %> 
    <% if book.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(book.errors.count, "error") %> Al guardar el libro:</h2>
            <ul>
            <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :book_title %>
    </div>
    <div class="form-group">
        <%= form.label :author %>
        <%= form.text_field :author, id: :book_author %>
    </div>
    <div class="form-group">
        <%= form.label :genre %>
        <%= form.text_field :genre, id: :book_genre %>
    </div>
    <div class="form-group">
        <%= form.label :status %>
        <%= form.select :status, Book.statuses.keys,{:include_blank=>true}%>
    </div>
    <div class="form-group">
        <%= form.label :lent_to %>
        <%= form.text_field :lent_to, id: :lent_to %>
    </div>
    <div class="form-group">
        <%= form.label :borrowed %>
        <%= form.date_select :borrowed, id: :borrowed, include_blank: true %>
    </div>
    <div class="form-group">
        <%= form.label :returned %>
        <%= form.date_select :returned, id: :returned, include_blank: true %>
    </div>
    <div class="actions"> 
        <%= form.submit %>
    </div>
<% end %>